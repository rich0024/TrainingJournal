<div class='d-flex flex-column position-absolute top-50 start-50 translate-middle'>
<h1><%= @category.name %> - <%= pluralize(@category.lessons.count, "Lesson") %></h1>
<ol>
    <% @category.lessons.each do  |lesson| %>
      <li><%= link_to lesson.name, lesson_path(lesson)  %></li>
    <% end  %>
</ol>
</div>