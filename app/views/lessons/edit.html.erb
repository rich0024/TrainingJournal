<%= render partial: "layouts/errors", locals: {object: @lesson} %>

<h1><%= @lesson.name %></h1>

<%= form_for(@lesson) do |f| %>

    <%= f.label "Choose a category:" %>
    <%= f.collection_select :category_id, Category.all, :id, :name, include_blank: true %>
  
     <p>Or create a new category:
    <%= f.fields_for :category do |c|%>
      <%= c.text_field :name%>
    <% end %>
    </p>

    <%= f.label :name %>
    <%= f.text_field :name %>
    <br>
    <br>
    <%= f.label :date %>
    <%= f.date_select :date %>
    <br>
    <br>
    <%= f.submit 'Submit' %>

    <% end %>
    <%= link_to 'Destroy', @lesson, method: :delete, data: { confirm: 'Are you sure?' } %>

    <%= link_to 'Back to Lessons', user_lessons_path(@lesson.user_id) %>